@using TechJobs6Persistent.ViewModels
@model TechJobs6Persistent.ViewModels.AddJobViewModel



<h1>Add a Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Job Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div>
        <label asp-for="EmployerId"> Select an Employer</label>
        <select asp-for="EmployerId" asp-items="@Model.Employers"></select>
    </div>
    <button><a asp-controller="Employer" asp-action="Create">Add Employers</a></button>
    <input type="submit" value="Add Job" />
</form>