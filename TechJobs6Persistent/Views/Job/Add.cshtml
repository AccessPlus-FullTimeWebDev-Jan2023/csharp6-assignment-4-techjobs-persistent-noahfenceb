@using TechJobs6Persistent.ViewModels
@model TechJobs6Persistent.ViewModels.JobDetailViewModel



<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Employer</label>
        <select class="form-control" asp-for="Employers" asp-items="Model.Employers">
            @foreach (var employer in Model.Employers)
            {
                <option value="@employer.Value">@employer.Text</option>
            }
        </select>
    </div>
    <br />

    <input type="submit" value="Add Job" />
</form>